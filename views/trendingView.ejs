<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <title>funnyTshirts.com</title>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">funny tShirts.com</a>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/product/trending">Trending</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about-us.html">About</a>
        </li>
      </ul>
    </nav>
  </head>
  <body>
    <h3>Trending TShirts</h3>
    <br />
    <br />

    <div class="row">
      <% tShirts.forEach( function(tShirtObj){ %>
      <a href="/product/<%= tShirtObj.id %>">
        <div class="card m-2" style="width: 18rem">
          <img
            class="card-img-top"
            src="/img/t-shirt.png"
            style="background-color: <%= tShirtObj.color %>"
          />

          <div class="card-img-overlay">
            <div
              class="offset-4 col-3 justify-content-center d-flex align-items-center text-center text-light"
              style="margin-top: 60px"
            >
              <%= tShirtObj.quote %>
            </div>
          </div>
        </div>
      </a>
      <% }); %>
    </div>
  </body>
</html>
